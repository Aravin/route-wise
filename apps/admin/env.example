# Next.js Configuration
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3020
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/routewise
MONGODB_DATABASE=routewise

# Alternative MongoDB Atlas Configuration
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/routewise?retryWrites=true&w=majority

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://your-auth0-domain.auth0.com/api/v2/
AUTH0_BASE_URL=http://localhost:3020
AUTH0_ISSUER_BASE_URL=https://your-auth0-domain.auth0.com
AUTH0_SECRET=your-long-random-secret-string-at-least-32-characters
AUTH0_SESSION_COOKIE_LIFETIME=86400

# Client-side Auth0 Configuration (reuse server values)
NEXT_PUBLIC_AUTH0_DOMAIN=your-auth0-domain.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://your-auth0-domain.auth0.com/api/v2/
NEXT_PUBLIC_AUTH0_BASE_URL=http://localhost:3020