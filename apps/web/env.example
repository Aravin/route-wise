# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3010

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3010
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://your-auth0-domain.auth0.com/api/v2/

# Auth0 URLs
AUTH0_BASE_URL=http://localhost:3010
AUTH0_ISSUER_BASE_URL=https://your-auth0-domain.auth0.com

# Auth0 Session Configuration
AUTH0_SECRET=your-long-random-secret-string-at-least-32-characters
AUTH0_SESSION_COOKIE_LIFETIME=86400

# Database (for NextAuth.js)
MONGODB_URI=mongodb://localhost:27017/routewise

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Facebook OAuth (Optional)
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Stripe (for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Razorpay (Alternative payment gateway)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=your-google-analytics-tracking-id
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Maps (Google Maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_UPLOAD_URL=http://localhost:3000/api/upload
